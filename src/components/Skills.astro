---
import { CenterTitle, SkillTitle } from "./React/TitleTag";
import {
    FrontendStack,
    BackendStack,
    ProgrammingStack,
    ToolsStack,
} from "../utils/SkillStack";
import FadeUp from "./React/FadeUp";
import SkillGrid from "./React/SkillGrid";
---

<section id="skills" class="w-full min-h-screen px-6 pb-4 pt-16 bg-background">
    <CenterTitle title="Tech Stack" variant="open" client:load />

    <div class="flex justify-center items-start gap-2">
        <FadeUp
            width="100%"
            height="100%"
            className="flex_center flex-col gap-4 p-4"
            client:load
        >
            <SkillTitle title="Front-End" client:load />
            <SkillGrid stack={FrontendStack} client:load />
        </FadeUp>

        <FadeUp
            width="100%"
            height="100%"
            className="flex_center flex-col gap-4 p-4"
            client:load
        >
            <SkillTitle title="Back-End" client:load />
            <SkillGrid stack={BackendStack} client:load />
        </FadeUp>
    </div>

    <div class="flex justify-center items-start gap-2">
        <FadeUp
            width="100%"
            height="100%"
            className="flex_center flex-col gap-4 p-4"
            client:load
        >
            <SkillTitle title="Programming" client:load />
            <SkillGrid stack={ProgrammingStack} client:load />
        </FadeUp>

        <FadeUp
            width="100%"
            height="100%"
            className="flex_center flex-col gap-4 p-4"
            client:load
        >
            <SkillTitle title="Tech & Tools" client:load />
            <SkillGrid stack={ToolsStack} client:load />
        </FadeUp>
    </div>
</section>

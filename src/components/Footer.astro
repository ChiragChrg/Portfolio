---
import { Image } from "astro:assets";
import {
    DiscordIcon,
    FaceBookIcon,
    GithubIcon,
    InstagramIcon,
    LinkedinIcon,
    LogoIcon,
    TwitterIcon,
    PurpleWave,
} from "../assets/SVGs";

const currentYear = new Date().getFullYear();
---

